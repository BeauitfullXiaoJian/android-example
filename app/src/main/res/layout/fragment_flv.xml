<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.FlvFragments.FlvFragment">

    <RelativeLayout
        android:id="@+id/play_pad"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <SurfaceView
            android:id="@+id/play_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <master.flame.danmaku.ui.widget.DanmakuView
            android:id="@+id/message_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/play_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#89000000"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_play"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="@drawable/click_background"
                android:clickable="true"
                android:contentDescription="@string/play"
                android:focusable="true"
                android:src="@drawable/ic_play_arrow_black_24dp" />

            <SeekBar
                android:id="@+id/play_progress"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/msg_input"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_marginEnd="@dimen/default_margin"
                android:background="@drawable/msg_radius"
                android:hint="@string/msg_hit"
                android:imeOptions="actionSend"
                android:inputType="text"
                android:maxLines="1"
                android:layout_gravity="center_vertical"
                android:paddingStart="@dimen/default_padding"
                android:paddingEnd="@dimen/default_padding"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/item_title_size" />

            <TextView
                android:id="@+id/play_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/default_margin"
                android:gravity="center"
                android:text="@string/play_time"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/play_loading"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="invisible" />

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="5dp">

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:tabGravity="fill"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/colorPrimary" />
    </android.support.v7.widget.CardView>


    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>

</LinearLayout>

